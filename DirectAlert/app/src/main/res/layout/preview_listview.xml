<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LL_Fond">

    <TextView
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:text="Summary"
        />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_alignLeft="@+id/description"
        android:layout_below="@+id/description"
        android:textSize="25dp"
        tools:text="Location"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:columnCount="2"
        android:rowCount="4">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/car"
            android:id="@+id/imageViewCar" />
        <TextView
            android:id="@+id/driving"
            android:textColor="@android:color/black"
            android:layout_gravity="left|top"
            android:textSize="25dp"
            tools:text="En voiture : " />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/bus"
            android:id="@+id/imageViewTransit" />
        <TextView
            android:id="@+id/transit"
            android:layout_gravity="left|top"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            tools:text="En transport en commun : "
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/velo"
            android:id="@+id/imageViewBicycling" />
        <TextView
            android:id="@+id/bicycling"
            android:layout_gravity="left|top"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            tools:text="A vÃ©lo : "
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/marcheur"
            android:id="@+id/imageViewWalking" />
        <TextView
            android:id="@+id/walking"
            android:layout_gravity="left|top"
            android:textColor="@android:color/black"
            android:textSize="25dp"
            tools:text="En marchant : "
            />
    </GridLayout>


</LinearLayout>